---
services:
  db:
    image: postgres:latest
    environment:
      POSTGRES_USER: {{ postgres_user }}
      POSTGRES_PASSWORD: {{ postgres_password }}
      POSTGRES_DB: {{ postgres_db_name }}
    volumes:
      - redmine_db_data:/var/lib/postgresql/data
    networks:
      - redmine_network

  redmine:
    image: redmine:latest
    environment:
      REDMINE_DB_ADAPTER: postgresql
      REDMINE_DB_HOST: db
      REDMINE_DB_PORT: 5432
      REDMINE_DB_NAME: {{ postgres_db_name }}
      REDMINE_DB_USER: {{ postgres_user }}
      REDMINE_DB_PASSWORD: {{ postgres_password }}
    ports:
      - "3000:3000"
    depends_on:
      - db
    networks:
      - redmine_network

volumes:
  redmine_db_data:

networks:
  redmine_network:
    driver: bridge
