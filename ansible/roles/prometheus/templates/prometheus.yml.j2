global:
  scrape_interval: 15s

scrape_configs:

  - job_name: "prometheus"
    static_configs:
      - targets: ["{{ hostvars['test_host']['ansible_host'] }}:9090"]

  - job_name: "node"
    static_configs:
      - targets: ["{{ hostvars['test_host']['ansible_host'] }}:9100"]

  - job_name: mysql 
    static_configs:
      - targets:
        - "{{ hostvars['mysql-master']['ansible_host'] }}:9104"
        - "{{ hostvars['mysql-slave']['ansible_host'] }}:9104"
