version: '3.8'
services:
  db:
   image: postgres:14
   container_name: db
   restart: always
   volumes:
     - pgdata:/var/lib/postgresql/data
   environment:
     - POSTGRES_DB=postgres
     - POSTGRES_USER=postgres
     - POSTGRES_PASSWORD=postgres
   ports:
     - "5432:5432"
   volumes:
     pgdata: