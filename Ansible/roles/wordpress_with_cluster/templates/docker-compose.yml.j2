version: '3.8'

services:
  master_database:
    image: {{ mysql_image }}
    ports:
      - "{{ db_port }}:3306"
    environment:
      MYSQL_ROOT_PASSWORD: {{ db_root_password }}
      MYSQL_DATABASE: {{ db_name }}
      MYSQL_USER: {{ db_user }}
      MYSQL_PASSWORD: {{ db_password }}
    volumes:
      - ./master_database.cnf:/etc/mysql/my.cnf
      - ./master_init.sql:/docker-entrypoint-initdb.d/init.sql
      - master_data:/var/lib/mysql
    healthcheck:
      test: >
        mysql -uroot -p$$MYSQL_ROOT_PASSWORD -e 'SELECT 1' &&
        mysql -uroot -p$$MYSQL_ROOT_PASSWORD -e 'SHOW MASTER STATUS'
      interval: 10s
      timeout: 5s
      retries: 5

  replica_database:
    image: {{ mysql_image }}
    ports:
      - "{{ db_port + 1 }}:3306"
    environment:
      MYSQL_ROOT_PASSWORD: {{ db_root_password }}
      MYSQL_DATABASE: {{ db_name }}
    volumes:
      - ./replica_database.cnf:/etc/mysql/my.cnf
      - ./replica_init.sql:/docker-entrypoint-initdb.d/init.sql
      - replica_data:/var/lib/mysql
    depends_on:
      master_database:
        condition: service_healthy
    healthcheck:
      test: >
        mysql -uroot -p$$MYSQL_ROOT_PASSWORD -e 'SELECT 1' &&
        mysql -uroot -p$$MYSQL_ROOT_PASSWORD -e 'SHOW REPLICA STATUS' | grep -q 'Waiting for source to send event'
      interval: 15s
      timeout: 10s
      retries: 10

  wordpress:
    image: {{ wordpress_image }}
    restart: unless-stopped
    ports:
      - "{{ wp_port }}:80"
    environment:
      WORDPRESS_DB_HOST: master_database
      WORDPRESS_DB_USER: {{ db_user }}
      WORDPRESS_DB_PASSWORD: {{ db_password }}
      WORDPRESS_DB_NAME: {{ db_name }}
    depends_on:
      - master_database
      - replica_database

volumes:
  master_data:
  replica_data: