version: '3.8'

services:
  prometheus:
    image: {{ prometheus_image }}
    ports:
      - "{{ prometheus_port }}:9090"
    volumes:
      - ./prometheus.yml:/etc/prometheus/prometheus.yml
    command:
      - '--config.file=/etc/prometheus/prometheus.yml'

  grafana:
    image: {{ grafana_image }}
    ports:
      - "{{ grafana_port }}:3000"
    volumes:
      - grafana_data:/var/lib/grafana
      - ./dashboard.json:/etc/grafana/provisioning/dashboards/dashboard.json
      - ./dashboard.yml:/etc/grafana/provisioning/dashboards/dashboard.yml
      - ./prometheus_grafana.yml:/etc/grafana/provisioning/datasources/prometheus.yml
    depends_on:
      - prometheus
    healthcheck:
      test: ["CMD", "curl", "http://{{ hostvars['wordpress_vm'].ansible_host }}:{{ grafana_port }}/api/health"]
      interval: 30s
      timeout: 10s
      retries: 10
      start_period: 120s

  master_exporter:
    image: {{ mysqld_exporter_image }}
    volumes:
      - ./master.my.cnf:/.my.cnf
    ports:
      - "{{ exporter_port }}:9104"

  replica_exporter:
    image: {{ mysqld_exporter_image }}
    volumes:
      - ./replica.my.cnf:/.my.cnf
    ports:
      - "{{ exporter_port + 1 }}:9104"

volumes:
  grafana_data: