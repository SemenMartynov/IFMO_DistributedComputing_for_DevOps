[mysqld]
server-id = 2  # Должен отличаться от мастера
log_bin = mysql-bin
binlog_format = ROW
binlog_row_image = FULL   
gtid_mode = ON            
enforce_gtid_consistency = ON
log_slave_updates = ON    
read_only = ON            
skip_slave_start = 1      
sync_binlog = 1           
expire_logs_days = 3     