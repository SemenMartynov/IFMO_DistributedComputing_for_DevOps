{
  "title": "HAProxy Prometheus Metrics",
  "uid": "haproxy_dashboard",
  "version": 1,
  "schemaVersion": 27,
  "tags": [
    "haproxy",
    "prometheus"
  ],
  "timezone": "browser",
  "editable": true,
  "time": {
    "from": "now-6h",
    "to": "now"
  },
  "panels": [
    {
      "type": "graph",
      "title": "HAProxy Backend Connection Errors",
      "gridPos": {
        "h": 8,
        "w": 24,
        "x": 0,
        "y": 8
      },
      "id": 9,
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "rate(haproxy_backend_connection_errors_total[1m])",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "lineWidth": 2,
            "showPoints": "never"
          }
        },
        "overrides": []
      }
    },
    {
      "type": "graph",
      "title": "HAProxy Bytes In/Out",
      "gridPos": {
        "h": 8,
        "w": 24,
        "x": 0,
        "y": 16
      },
      "id": 17,
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "rate(haproxy_backend_bytes_in_total[1m])",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "lineWidth": 2,
            "showPoints": "never"
          }
        },
        "overrides": []
      }
    },
    {
      "type": "graph",
      "title": "HAProxy Current Sessions",
      "gridPos": {
        "h": 8,
        "w": 24,
        "x": 0,
        "y": 24
      },
      "id": 25,
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "haproxy_backend_current_sessions",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "smooth",
            "lineWidth": 2,
            "showPoints": "never"
          }
        },
        "overrides": []
      }
    }
  ],
  "templating": {
    "list": []
  },
  "annotations": {
    "list": []
  },
  "__requires": [
    {
      "type": "datasource",
      "id": "prometheus",
      "name": "Prometheus",
      "version": "1.0.0"
    },
    {
      "type": "panel",
      "id": "graph",
      "name": "Graph",
      "version": ""
    }
  ]
}
