global:
  scrape_interval: 15s

scrape_configs:
  - job_name: 'node'
    static_configs:
      - targets: ['node_exporter:9100']

  - job_name: 'mysql'
    static_configs:
      - targets: ['wp_db_master:9104']  # Для mysqld_exporter

  - job_name: 'docker'
    static_configs:
      - targets: ['cadvisor:8080']  # Для cAdvisor