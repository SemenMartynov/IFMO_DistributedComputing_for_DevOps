global:
  scrape_interval: 15s
  evaluation_interval: 15s

scrape_configs:
  - job_name: 'prometheus'
    static_configs:
      - targets: ['localhost:9090']

  - job_name: 'node-exporter'
    static_configs:
      - targets: 
        - {{ hostvars[groups['master'][0]]['ansible_host'] }}:9100
        - {{ hostvars[groups['slave'][0]]['ansible_host'] }}:9100