global:
  scrape_interval: 15s
  evaluation_interval: 15s

scrape_configs:
  - job_name: 'prometheus'
    static_configs:
      - targets: [ "localhost:{{ prometheus_port }}" ]

  - job_name: 'node_exporter'
    static_configs:
      - targets: [ 'localhost:9100' ]

  - job_name: 'docker'
    static_configs:
      - targets: [ "localhost:{{ cadvisor_port }}" ]

  - job_name: 'mysql-master'
    static_configs:
      - targets: [ "localhost:{{ prometheus_mysql_exporter_master_port }}" ]
    metrics_path: /metrics

  - job_name: 'mysql-slave'
    static_configs:
      - targets: [ "localhost:{{ prometheus_mysql_exporter_slave_port }}" ]
    metrics_path: /metrics