services:
  wordpress:
    image: {{ wordpress_image }}
    ports:
      - "{{ wordpress_port }}:80"
    environment:
      WORDPRESS_DB_HOST: db-master
      WORDPRESS_DB_USER: "{{ db_user }}"
      WORDPRESS_DB_PASSWORD: "{{ db_password }}"
      WORDPRESS_DB_NAME: "{{ db_name }}"
    volumes:
      - wp_data:/var/www/html
    depends_on:
      - db-master

  db-master:
    image: {{ mysql_image }}
    command: ["--server-id={{ master_server_id }}", "--log-bin=mysql-bin", "--binlog-format=ROW"]
    ports:
      - "3306:3306"
    environment:
      MYSQL_ROOT_PASSWORD: "{{ mysql_root_password }}"
      MYSQL_ROOT_HOST: "%"
      MYSQL_DATABASE: "{{ db_name }}"
      MYSQL_USER: "{{ db_user }}"
      MYSQL_PASSWORD: "{{ db_password }}"
    volumes:
      - db_master_data:/var/lib/mysql

  db-slave:
    image: {{ mysql_image }}
    command: ["--server-id={{ slave_server_id }}", "--log-bin=mysql-bin", "--binlog-format=ROW", "--read-only=ON"]
    ports:
      - "3307:3306"
    depends_on:
      - db-master
    environment:
      MYSQL_ROOT_PASSWORD: "{{ mysql_root_password }}"
      MYSQL_ROOT_HOST: "%"
      MYSQL_DATABASE: "{{ db_name }}"
      MYSQL_USER: "{{ db_user }}"
      MYSQL_PASSWORD: "{{ db_password }}"
    volumes:
      - db_slave_data:/var/lib/mysql

volumes:
  wp_data:
  db_master_data:
  db_slave_data: